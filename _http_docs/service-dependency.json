{
  "openapi": "3.0.3",
  "info": {
    "title": "Service Dependency Matrix API",
    "version": "1.0.0",
    "description": "An API for managing service dependencies, databases, and releases using a graph-based model."
  },
  "paths": {
    "/services": {
      "get": {
        "summary": "List all services",
        "responses": {
          "200": {
            "description": "List of services",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Service" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new service",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ServiceInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Service created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Service" }
              }
            }
          },
          "400": {
            "description": "bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/empty"
                }
              }
            }
          }
        }
      }
    },
    "/services/{id}/dependencies": {
      "get": {
        "summary": "Get dependencies for a service",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of dependencies",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Dependency" }
                }
              }
            }
          }
        }
      }
    },
    "/dependencies": {
      "post": {
        "summary": "Create a dependency between two services",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DependencyInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Dependency created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Dependency" }
              }
            }
          }
        }
      }
    },
    "/services/{id}/releases": {
      "get": {
        "summary": "Get releases for a service",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of releases",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Release" }
                }
              }
            }
          }
        }
      }
    },
    "/releases": {
      "post": {
        "summary": "Add a new release",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ReleaseInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Release created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Release" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "empty": {
        "type": "object",
        "properties": {

        }
      },
      "Service": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["service", "database", "external"] },
          "description": { "type": "string" }
        },
        "required": ["id", "name", "type"]
      },
      "ServiceInput": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["service", "database", "external"] },
          "description": { "type": "string" }
        },
        "required": ["name", "type"]
      },
      "Dependency": {
        "type": "object",
        "properties": {
          "source_service_id": { "type": "string" },
          "target_service_id": { "type": "string" },
          "type": { "type": "string" },
          "notes": { "type": "string" }
        },
        "required": ["source_service_id", "target_service_id", "type"]
      },
      "DependencyInput": {
        "type": "object",
        "properties": {
          "source_service_id": { "type": "string" },
          "target_service_id": { "type": "string" },
          "type": { "type": "string" },
          "notes": { "type": "string" }
        },
        "required": ["source_service_id", "target_service_id", "type"]
      },
      "Release": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "service_id": { "type": "string" },
          "tag": { "type": "string" },
          "release_date": { "type": "string", "format": "date-time" },
          "github_url": { "type": "string", "format": "uri" },
          "notes": { "type": "string" }
        },
        "required": ["id", "service_id", "tag", "release_date"]
      },
      "ReleaseInput": {
        "type": "object",
        "properties": {
          "service_id": { "type": "string" },
          "tag": { "type": "string" },
          "release_date": { "type": "string", "format": "date-time" },
          "github_url": { "type": "string", "format": "uri" },
          "notes": { "type": "string" }
        },
        "required": ["service_id", "tag", "release_date"]
      }
    }
  }
}
