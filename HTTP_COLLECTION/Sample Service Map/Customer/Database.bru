meta {
  name: Database
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/services
  body: json
  auth: none
}

body:json {
  {
    "name": "Customer Database",
    "type": "database",
    "description": "customer database",
    "url": "{{$randomUrl}}"
  }
}

script:post-response {
  if (res.status == 201) {
    bru.setEnvVar('customer_db_id', res.body.id, { persist: false})
  }
}
