meta {
  name: Service
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/services
  body: json
  auth: none
}

body:json {
  {
    "name": "Authentication API",
    "type": "service",
    "description": "auth service",
    "url": "{{$randomUrl}}"
  }
}

script:post-response {
  if (res.status == 201) {
    bru.setEnvVar('auth_api_id', res.body.id, { persist: false})
  }
}
